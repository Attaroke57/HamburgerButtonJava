<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kratin"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gambar Tugu -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:src="@drawable/tugu"
                android:scaleType="centerCrop"/>

            <!-- Teks tentang kota Yogyakarta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Yogyakarta"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:text="Yogyakarta adalah salah satu kota istimewa yang yang memiliki beragam budaya khasnya." />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
